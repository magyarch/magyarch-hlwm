#!/bin/sh

DIALOG_RESULT=$(echo -e 'Quit hlwm\nHibernate\nReboot\nPoweroff' | dmenu -i -c -g 1 -l 20 -nb '#282a36' -sb '#bd93f9' -fn 'JetBrains Mono Nerd-13' 'System: ')

case $DIALOG_RESULT in
        "Quit hlwm" ) herbstclient quit ;;
        "Hibernate") systemctl hibernate ;;
        "Reboot") systemctl reboot ;;
        "Poweroff") systemctl poweroff ;;
        *) exit 0
esac
