# herbstclient set_attr theme.title_when multiple_tabs
## Theme Resets
hc attr theme.reset 1
hc attr theme.active.reset 1
hc attr theme.normal.reset 1
hc attr theme.urgent.reset 1
hc attr theme.tiling.reset 1
hc attr theme.floating.reset 1

## General Settings
hc attr theme.tiling.outer_width 1
hc set window_gap 20
hc set frame_padding 0
#hc set smart_window_surroundings on
hc set smart_frame_surroundings 'hide_all'
hc set mouse_recenter_gap 1
hc set hide_covered_windows on

## Frame settings
# hc set frame_border_width 0
# hc set frame_border_inner_width 2
# hc set frame_border_active_color "${color10:-#000000}"
# hc set frame_border_normal_color "${color4:-#282a36}"
# hc set frame_border_inner_color "${color3:-#282a36}"
# hc set frame_bg_normal_color "${color0:-#282a36}"
# hc set frame_bg_active_color "${color1:-#947cc3}"
# hc set show_frame_decorations 'focused_if_multiple'
# hc set frame_gap 0
 hc set frame_bg_transparent 1
#  hc set frame_normal_opacity 100
#  hc set frame_active_opacity 100
#  hc set frame_transparent_width 0

## Background settings
hc attr theme.color "${color0:-#282a36}"
hc attr theme.background_color "${color0:-#282a36}"
hc attr theme.border_width 8

## Inner border normal settings
hc attr theme.inner_color "${color2:-#262138}"
hc attr theme.inner_width 1

## Outer border normal settings
hc attr theme.outer_color "${color1:-#262138}"
hc attr theme.outer_width 1

## Title settings
# hc attr theme.normal.tab_color "${color3:-#282a36}"
# hc attr theme.title_align 'center'
# hc attr theme.title_color "${color4:-#c3cdc8}"
# hc attr theme.title_depth 3  # space below the title's baseline
# hc attr theme.title_font 'JetBrains Mono Nerd Font:pixelsize=28'  # example using Xft
# # hc attr theme.title_font '-*-fixed-medium-r-*-*-13-*-*-*-*-*-*-*'
# hc attr theme.title_height 25
# hc attr theme.title_when always

## Settings for non-focused clients
hc attr theme.normal.color "${color3:-#282a36}"
hc attr theme.normal.tab_color "${color3:-#1F1F1Fdd}"
hc attr theme.normal.title_color "${color4:-#898989}"

## Settings for focused clients
hc attr theme.active.background_color "${color0:-#282a36}"
hc attr theme.active.color "${color10:-#947cc3}"
hc attr theme.active.tab_color "${color3:-#947cc3}"
hc attr theme.active.inner_color "${color9:-#03a8f4}"

## Settings for urgent clients
hc attr theme.urgent.color "${color11:-#e91e63}"
hc attr theme.urgent.tab_color "${color11:-#e91e63}"
hc attr theme.urgent.inner_color "${color11:-#9A65B0}"

## Settings for floating
hc attr theme.floating.border_width 4
hc attr theme.floating.outer_width 1
hc attr theme.floating.outer_color "${color15:-#282a36}"
hc attr theme.floating.title_when always

# ## Settings for minimal
hc attr theme.minimal.title_height 25
hc attr theme.minimal.title_color "${color4:-#c3cdc8}"
hc attr theme.minimal.title_depth 3  # space below the title's baseline
hc attr theme.minimal.title_align 'center'
hc attr theme.minimal.title_font 'JetBrains Mono Nerd Font:pixelsize=28'  # example using Xft
hc attr theme.minimal.tab_color "${color3:-#1F1F1Fdd}"
hc attr theme.minimal.color "${color10:-#947cc3}"



# RULES
hc unrule -F
hc rule focus=on # normally focus new clients
hc rule floatplacement=center
#hc rule focus=off # normally do not focus new clients

#assign applications to workspaces or tags
hc rule class~'(brave|Brave-browser|Chromium|Google-chrome)' tag='' switchtag=on focus=on
hc rule class='Spotify' tag='' switchtag=on focus=on
hc rule class='subl' tag=''  switchtag=on focus=on
hc rule class~'(discord|Discord)' tag='' switchtag=on focus=on
#hc rule class~'(vlc|mpv|Mpv)' tag='' switchtag=on focus=on
hc rule class~'(VirtualBox Manager|Vmplayer)' tag='' switchtag=on focus=on
hc rule class~'(Thunar|Pcmanfm|Nemo)' tag='' switchtag=on focus=on
hc rule class~'(Shotcut|Gpick|gpick|Steam)' tag='' floating=on
hc rule class~'(gimp|Gimp)' tag='' switchtag=on focus=on
hc rule class~'(Zathura|zathura|Lxappearance|Pavucontrol|)' floating=on floatplacement=center floating_geometry=1800x1000


# SCRATCHPADS #
#-------------#
hc rule title~'scratchpad' floating=on floatplacement=center floating_geometry=1800x1000
hc rule title~'FM' floating=on floatplacement=center floating_geometry=1800x1000
hc rule class~'News' floating=on floatplacement=center floating_geometry=1800x1000
#hc rule title~'Mail' floating=on floatplacement=center floating_geometry=1500x800
hc rule title~'Music' floating=on floatplacement=center floating_geometry=1800x1000
hc rule title~'Todo' floating=on floatplacement=center floating_geometry=1000x650



# give focus to most common terminals
hc rule class~'(.*[Rr]xvt.*|.*[Tt]erm|Konsole)' floating=on focus=on
hc rule windowtype~'_NET_WM_WINDOW_TYPE_(DIALOG|UTILITY|SPLASH)' floating=on 
#hc rule windowtype='_NET_WM_WINDOW_TYPE_DIALOG' focus=on
hc rule windowtype~'_NET_WM_WINDOW_TYPE_(NOTIFICATION|DOCK|DESKTOP)' manage=off

# unlock, just to be sure
hc unlock


#Dualmonitor setup
# hc detect_monitors
#hc set_monitors 1920x1080+0+0 1920x1080+1920+0
#hc remove_monitor 1


#room for polybar on both monitors
# find the panel
#panel=$HOME/.config/herbstluftwm/panel.sh
#[ -x "$panel" ] || panel=/etc/xdg/herbstluftwm/panel.sh
panel=$HOME/.config/polybar/launch.sh
for monitor in $(herbstclient list_monitors | cut -d: -f1) ; do
start it on each monitor
"$panel" $monitor &
#hc pad 0 "" "" 25
hc pad 0 36 0 0  
